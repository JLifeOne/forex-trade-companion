{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2021",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./src", // Allows imports relative to src
    "paths": {
      "@/*": ["*"] // Example path alias if you want to use @/ for imports from src
    }
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
